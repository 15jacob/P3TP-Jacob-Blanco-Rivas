<!DOCTYPE html>
<html lang="es">
<%- include('../../misc/head.ejs', { title: 'Editar Producto - Cap&Sock', css: ['product.css'] }); %>

<body>
    <header class="text-center text-white">
        <div class="container-fluid">
            <div class="row p-3 bg-success d-flex align-items-center">
                <div class="col-4 col-md-2">
                    <a href="/admin/dashboard"><img src="/assets/img/favicon.svg" alt="Cap&Sock"></a>
                </div>
                <div class="col-4 col-md-8">
                    <h1 class="h3 text-center flex-grow-1 m-0">Cap&Sock - Editar Producto</h1>
                </div>
                <div class="col-4 col-md-2 text-end">
                    <a href="/admin/dashboard" class="btn btn-outline-light btn-sm">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                </div>
            </div>
        </div>
    </header>

    <div class="container my-4">
        <div class="form-container">
            <% if (success) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <%= success %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% } %>
            
            <% if (error) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% } %>

            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-pencil me-2"></i>Editar Producto: <%= producto.title %>
                    </h5>
                </div>
                <div class="card-body">
                    <form action="/admin/productos/actualizar/<%= producto.id %>" method="POST" enctype="multipart/form-data" id="productoForm">
                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="text-primary mb-3">Información Básica</h6>
                                
                                <div class="mb-3">
                                    <label for="title" class="form-label">Nombre del Producto *</label>
                                    <input type="text" class="form-control" id="title" name="title" required 
                                           value="<%= producto.title %>">
                                </div>

                                <div class="mb-3">
                                    <label for="id_category" class="form-label">Categoría *</label>
                                    <select class="form-select" id="id_category" name="id_category" required>
                                        <option value="">Seleccionar categoría</option>
                                        <% categorias.forEach(categoria => { %>
                                            <option value="<%= categoria.id %>" 
                                                    <%= producto.id_category == categoria.id ? 'selected' : '' %>>
                                                <%= categoria.name %>
                                            </option>
                                        <% }); %>
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label for="color" class="form-label">Color</label>
                                    <input type="text" class="form-control" id="color" name="color" 
                                           value="<%= producto.color || '' %>">
                                </div>

                                <div class="mb-3">
                                    <label for="price" class="form-label">Precio *</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input type="text" class="form-control" id="price" name="price" required 
                                               value="<%= producto.price %>">
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <h6 class="text-primary mb-3">Inventario e Imagen</h6>

                                <div class="mb-3">
                                    <label for="stock" class="form-label">Stock *</label>
                                    <input type="number" class="form-control" id="stock" name="stock" required 
                                           value="<%= producto.stock %>" min="0">
                                </div>

                                <div class="mb-3">
                                    <% 
                                        let atributos = producto.attributes || {};
                                    %>
                                    
                                    <div id="gorraAttributes" class="attribute-group" style="display: none;">
                                        <label for="tipo" class="form-label">Tipo de Gorra</label>
                                        <select class="form-select" id="tipo" name="attributes[tipo]">
                                            <option value="">Seleccionar tipo</option>
                                            <option value="Snapback" <%= atributos.tipo === 'Snapback' ? 'selected' : '' %>>Snapback</option>
                                            <option value="Trucker" <%= atributos.tipo === 'Trucker' ? 'selected' : '' %>>Trucker</option>
                                            <option value="Fitted" <%= atributos.tipo === 'Fitted' ? 'selected' : '' %>>Fitted</option>
                                            <option value="Flexfit" <%= atributos.tipo === 'Flexfit' ? 'selected' : '' %>>Flexfit</option>
                                        </select>
                                    </div>

                                    <div id="mediaAttributes" class="attribute-group" style="display: none;">
                                        <label for="cania" class="form-label">Tipo de Caña</label>
                                        <select class="form-select" id="cania" name="attributes[cania]">
                                            <option value="">Seleccionar caña</option>
                                            <option value="Corta" <%= atributos.cania === 'Corta' ? 'selected' : '' %>>Corta</option>
                                            <option value="Larga" <%= atributos.cania === 'Larga' ? 'selected' : '' %>>Larga</option>
                                            <option value="Media" <%= atributos.cania === 'Media' ? 'selected' : '' %>>Media</option>
                                            <option value="Deportiva" <%= atributos.cania === 'Deportiva' ? 'selected' : '' %>>Deportiva</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="imagen" class="form-label">Imagen del Producto</label>
                                    
                                    <% if (producto.image_url) { %>
                                        <div class="mb-2">
                                            <p class="small text-muted mb-1">Imagen actual:</p>
                                            <img src="<%= producto.image_url %>" alt="Imagen actual" class="current-image">
                                        </div>
                                    <% } %>
                                    
                                    <input type="file" class="form-control" id="imagen" name="imagen" 
                                           accept="image/*">
                                    <div class="form-text">Dejar vacío para mantener la imagen actual</div>
                                    
                                    <div class="mt-2">
                                        <img id="imagePreview" class="image-preview" style="display: none;">
                                    </div>      
                                </div>
                                <div class="mb-3">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="status" name="status" 
                                            <%= producto.status ? 'checked' : '' %>>
                                        <label class="form-check-label" for="status">Producto activo</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="d-flex gap-2 justify-content-between">
                                    <a href="/admin/dashboard" class="btn btn-outline-secondary">
                                        <i class="bi bi-arrow-left me-2"></i>Volver al Dashboard
                                    </a>
                                    <div>
                                        <button type="submit" class="btn btn-primary">
                                            <i class="bi bi-check-circle me-2"></i>Guardar Cambios
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('../../misc/footer.ejs'); %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/editar-producto.js"></script>
    <script src="/js/tema.js"></script>
</body>
</html>