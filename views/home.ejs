<!DOCTYPE html>
<html lang="en">
<%- include('./misc/head.ejs', { title: 'Home - Cap&Sock' }); %>

<body class="min-vh-100 text-white">
    <%- include('./misc/header.ejs', { categories, id_category: params.id_category }); %>

    <main>
        <div class="container">
            <div id="contenedorProductos" class="row">

                <!-- Aqui se cargan los productos -->
                <% for (let i = 0; i < products.length; i++) { %>
                    <%- include('./misc/product/item.ejs', { product: products[i] }) %>
                <% } %>

            </div>

            <div class="row pb-3">
                <div class="col-6 text-end">
                    <button
                        class="btn btn-outline-success page-select <%- params.page == 1 ? 'disabled' : '' %>"
                        data-page="<%- params.page > 0 ? params.page - 1 : 0 %>"
                        data-id-category="<%- params.id_category %>"
                        id="btnAnterior">
                        Anterior
                    </button>
                </div>
                
                <div class="col-6 text-start">
                    <button
                        class="btn btn-outline-success page-select <%- params.page == params.total_pages ? 'disabled' : '' %>"
                        data-page="<%- params.page < params.total_pages ? params.page + 1 : params.page %>"
                        data-id-category="<%- params.id_category %>"
                        id="btnSiguiente">
                        Siguiente
                    </button>
                </div>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
  <!--   <script type="module">
        import { initProductos } from './js/productosController.js'
        initProductos()
    </script> -->
    <script src="js/tema.js"></script>

</body>
</html>